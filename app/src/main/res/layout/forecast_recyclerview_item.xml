<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="calculateddata"
            type="com.kodatos.cumulonimbus.uihelper.DBModelCalculatedData" />
    </data>
<android.support.constraint.ConstraintLayout
    android:id="@+id/itemConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:transitionGroup="false"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/day_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="0dp"
        android:text="@{calculateddata.calculatedDay}"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="16sp"
        app:fontFamily="@font/product_sans_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="DAT" />

    <ImageView
        android:id="@+id/forecast_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="96dp"
        android:scaleType="fitXY"
        app:drawableResource="@{calculateddata.drawable_resource_id}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_cloud_sample" />

    <TextView
        android:id="@+id/forecast_main_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="18dp"
        android:text="@{calculateddata.weatherMain}"
        android:textAlignment="textStart"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="16sp"
        app:fontFamily="@font/product_sans_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Main" />

    <TextView
        android:id="@+id/forecast_desc_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:maxLength="16"
        android:maxLines="1"
        android:text="@{calculateddata.weatherDesc}"
        android:textAlignment="textStart"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="16sp"
        app:fontFamily="@font/product_sans_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/forecast_main_textview"
        tools:text="Description" />

    <TextView
        android:id="@+id/forecast_temp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:text="@{calculateddata.calculatedTemp}"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="20sp"
        app:fontFamily="@font/product_sans_regular"
        app:layout_constraintBaseline_toBaselineOf="@+id/day_textview"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="30" />
</android.support.constraint.ConstraintLayout>
</layout>