<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="android:windowSharedElementEnterTransition">@transition/detail_shared_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/detail_shared_transition</item>
        <item name="android:windowSharedElementReturnTransition">@transition/detail_shared_transition</item>
        <item name="android:windowSharedElementReenterTransition">@transition/detail_shared_transition</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.ColouredBackground">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainUIText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainUIText.LeftSideText">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="MainUIText.LeftSideText.BoldText">
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="MainUIText.RightSideText">
        <item name="android:textColor">@color/textColorSecondaryInverse</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="MainUIText.RightSideText.BoldText">
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="MainUISmallCategoryImageView">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/circle_background</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">@dimen/mainui_small_category_icon_gap</item>
    </style>

    <style name="ForecastHeaderText">
        <item name="android:background">@color/whiteOneShadeDarker</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material</item>
        <item name="android:textColor">@color/textColorTertiary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="DetailUIPriorityOneText">
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="DetailUIPriorityTwoText">
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">@color/textColorSecondaryAlt</item>
    </style>

    <style name="DetailUIPriorityThreeText">
        <item name="fontFamily">@font/product_sans_italic</item>
        <item name="android:textColor">@color/textColorTertiary</item>
    </style>
</resources>
