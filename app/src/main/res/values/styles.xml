<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="android:windowSharedElementEnterTransition">@transition/detail_shared_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/detail_shared_transition</item>
        <item name="android:windowSharedElementReturnTransition">@transition/detail_shared_transition</item>
        <item name="android:windowSharedElementReenterTransition">@transition/detail_shared_transition</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.ColouredBackground">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:listDivider">@null</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="CustomMenuButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingTop">8dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="AppTheme.NoActionBar.ColouredBackground.Main">
        <item name="android:windowBackground">@drawable/placeholder_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomMenuButton</item>
    </style>

    <style name="AppTheme.NoActionBar.ColouredBackground.About">
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainUIText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainUIText.LeftSideText">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="MainUIText.LeftSideText.BoldText">
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="MainUIText.RightSideText">
        <item name="android:textColor">@color/textColorSecondaryInverse</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="MainUIText.RightSideText.BoldText">
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="MainUISmallCategoryImageView">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/circle_background</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">@dimen/mainui_small_category_icon_gap</item>
    </style>

    <style name="ForecastHeaderText">
        <item name="android:textAppearance">@android:style/TextAppearance.Material</item>
        <item name="android:textColor">@color/textColorSecondaryAlt</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="ForecastTitleText">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/product_sans_bold_italic</item>
    </style>

    <style name="PriorityOneText">
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="PriorityTwoText">
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">@color/textColorSecondaryAlt</item>
    </style>

    <style name="PriorityThreeText">
        <item name="fontFamily">@font/product_sans_italic</item>
        <item name="android:textColor">@color/textColorTertiary</item>
    </style>

    <style name="PriorityOneText.UVInfoLeftSide">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_row">0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <style name="PriorityTwoText.UVDescription">
        <item name="android:layout_columnWeight">2</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_row">0</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textColorSecondaryInverse</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PriorityTwoText.UVSuggestion">
        <item name="android:layout_columnWeight">2</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_row">1</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
